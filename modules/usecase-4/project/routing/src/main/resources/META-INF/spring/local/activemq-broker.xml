    <!-- ActiveMQ Broker -->
    <broker brokerName="demo" xmlns="http://activemq.apache.org/schema/core">

        <destinations>
            <queue physicalName="ADMIN.FOO" />
        </destinations>

        <destinationPolicy>
            <policyMap>
                <policyEntries>
                    <policyEntry queue=">">
                        <deadLetterStrategy>
                            <individualDeadLetterStrategy queuePrefix="DLQ." useQueueForQueueMessages="true"/>
                        </deadLetterStrategy>
                    </policyEntry>
                </policyEntries>
            </policyMap>
        </destinationPolicy>

        <plugins>
            <jaasAuthenticationPlugin configuration="LdapConfiguration"/>
        </plugins>

        <transportConnectors>
            <transportConnector name="tcp" uri="tcp://localhost:61616"/>
        </transportConnectors>
    </broker>
